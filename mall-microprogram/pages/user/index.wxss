.user-poster {
  /* width: 100%; */
  /* height: 45vw; */
  display: block;
  padding: 18px 18px;
  background-color: rgb(255, 216, 66);
}

.user-name {
  display: block;
  margin-bottom: 40px;
}

.user-name text {
  font-size: 24px;
}

.user-info {
  position: relative;
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.user-info van-image {
  display: inline-block;
  position: absolute;
  right: 0;
}

.user-info-item {
  display: inline-block;
  /* width: 90px; */
  text-align: center;
  margin-right: 20px;
}

.user-info-item text {
  display: block;
  font-weight: lighter;
  font-size: 15px;
}

.user-info-item :first-child {
  font-size: 24px;
  font-weight: normal;
}

.user-links {
  padding: 15px 0;
  font-size: 12px;
  text-align: center;
  background-color: #fff;
}

.user-links .van-icon {
  font-size: 24px;
  display: block;
  margin-right: 4px;
}

.user-links text {
  display: block;
}

.user-links .van-row {
  padding: 15px 0;
}

