<view>
  <view>
    <van-image
      height="414"
      width="100%"
      src="{{ imageAddresses[0] }}"
    />
  </view>
  <van-cell-group border="{{ false }}">
    <van-cell
      custom-class="goods-message"
      title="{{ name }}"
      label="{{ price }}"
    />
    <van-cell custom-class="goods-express" border="{{ false }}">
      <!-- <van-col span="10">运费：{{ goods.express }}</van-col> -->
      <van-col span="14">库存：{{ quantity }}</van-col>
    </van-cell>
  </van-cell-group>
  <van-goods-action>
    <van-goods-action-button
      text="立即购买"
      bind:click="onClickButton"
    />
</van-goods-action>
</view>