<view>
  <view>
    <van-image
      height="180"
      width="100%"
      src=""
    />
  </view>
  <view>
    <van-grid>
      <van-grid-item icon="photo-o" text="分类1" />
      <van-grid-item icon="photo-o" text="分类2" />
      <van-grid-item icon="photo-o" text="分类3" />
      <van-grid-item icon="photo-o" text="分类4" />
    </van-grid>
  </view>
  <view 
  wx:for="{{ goods }}"
  wx:key="{{ item.id }}"
  >
  <van-card
        title="{{ item.title }}"
        desc="{{ item.desc }}"
        price="{{ item.price }}"
        thumb="{{ item.thumb }}"
        bind:click="onClickGoods"
      />
  </view>
  <van-tabbar active="{{ 0 }}" bind:change="onChange" active-color="rgb(255, 216, 66)">
    <van-tabbar-item icon="search">商品列表</van-tabbar-item>
    <van-tabbar-item icon="user-o">用户中心</van-tabbar-item>
  </van-tabbar>
</view>